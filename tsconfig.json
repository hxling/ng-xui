{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "datagrid": [
        "dist/datagrid"
      ],
      "datagrid/*": [
        "dist/datagrid/*"
      ],
      "treegrid": [
        "dist/treegrid"
      ],
      "treegrid/*": [
        "dist/treegrid/*"
      ],
      "tree": [
        "dist/tree"
      ],
      "tree/*": [
        "dist/tree/*"
      ],
      "modal": [
        "dist/modal"
      ],
      "modal/*": [
        "dist/modal/*"
      ],
      "utils": [
        "dist/utils"
      ],
      "utils/*": [
        "dist/utils/*"
      ],
      "context-menu": [
        "dist/context-menu"
      ],
      "context-menu/*": [
        "dist/context-menu/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}